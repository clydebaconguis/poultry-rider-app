<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrdersDetail">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/green"
                android:text="Parcel Details"
                app:drawableStartCompat="@drawable/baseline_check_circle_24" />
            <TextView
                android:id="@+id/total_heading"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/green"
                android:text="Php 0"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/black_gray"
            android:id="@+id/item_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            />
        <View
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/black_gray"
            android:id="@+id/item_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order ID"
            />
        <View
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/black_gray"
            android:id="@+id/item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            />
        <View
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/black_gray"
            android:id="@+id/item_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            />
        <View
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/black_gray"
            android:id="@+id/item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            />
        <View
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/red"
            android:id="@+id/item_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            />
        <View
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/black_gray"
            android:id="@+id/item_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total"
            />
        <View
            android:layout_marginTop="5dp"
            android:background="@color/black_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:id="@+id/buttonCall"
                android:backgroundTint="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:text="Call"
                android:textStyle="bold"
                android:textColor="@color/white"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/buttonLocate"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Locate"
                android:textStyle="bold"
                android:textColor="@color/white"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:background="@color/black_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/black_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proof of Delivery (Take a photo)"
            />
        <ImageView
            android:id="@+id/take_picture"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/baseline_photo_camera_24"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/gray"
            android:contentDescription="image"
            android:layout_width="200dp"
            android:clickable="true"
            android:layout_height="200dp"
            android:focusable="true" />

        <View
            android:layout_marginTop="5dp"
            android:background="@color/black_gray"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <Button
            android:id="@+id/buttonConfirm"
            android:paddingVertical="12dp"
            android:layout_marginTop="20dp"
            android:text="Confirm Delivery"
            android:textStyle="bold"
            android:backgroundTint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/buttonFailed"
            android:paddingVertical="12dp"
            android:layout_marginTop="10dp"
            android:text="Failed Delivery"
            android:textStyle="bold"
            android:backgroundTint="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/btnHome"
            android:text="Back"
            android:clickable="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginVertical="15dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"/>

</RelativeLayout>